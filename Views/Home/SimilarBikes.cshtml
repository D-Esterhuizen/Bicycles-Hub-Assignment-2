@model List<Assignment_2.Models.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "SimilarBikes";
}

<style>
    body {
        background-color: #f8f9fa; /* Light background color for better contrast */
        font-family: Arial, sans-serif;
    }

    .content-section {
        margin-top: 50px;
        text-align: center;
    }

    .product-list {
        margin: 0 auto;
        max-width: 900px;
        padding: 20px;
        background: white; /* White background for product list */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    .listing-box {
        margin-bottom: 20px;
        height: 350px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border: 1px solid #e0e0e0; /* Light border for cards */
        border-radius: 8px; /* Rounded corners for cards */
        transition: transform 0.2s, box-shadow 0.2s; /* Smooth transition */
        overflow: hidden;
    }

        .listing-box:hover {
            transform: translateY(-5px); /* Lift effect on hover */
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2); /* Enhanced shadow */
        }

    .card-img-top {
        height: 200px; /* Fixed height for images */
        object-fit: cover; /* Ensure image covers the space */
        border-bottom: 1px solid #e0e0e0;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 15px;
    }

    .card-title {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: #343a40; /* Darker text for better readability */
    }

    .card-text {
        font-size: 1rem;
        color: #6c757d; /* Muted text for description */
    }
</style>

<h2 class="text-center">Similar Bikes</h2>

<div class="container product-list">
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card listing-box">
                        <img src="data:image/jpeg;base64,@product.Base64Image" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <h5 class="card-title">@product.ProductName</h5>
                            <p class="card-text">
                                <strong>Brand:</strong> @product.BrandName<br />
                                <strong>Price:</strong> @product.FormattedPrice
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center">No similar bikes found.</p>
    }
</div>
