<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa; /* Light background for contrast */
            font-family: Arial, sans-serif; /* General font */
        }

        .navbar-custom {
            background-color: #1A73E8; /* Deep Blue Background */
            color: white; /* White Text */
        }

        .button-custom {
            background-color: #F5F5F5;
            color: #1A73E8;
            border: 1px solid #1A73E8; /* Border to match color theme */
        }

            .button-custom:hover {
                background-color: #e7e7e7; /* Slightly darker on hover */
            }

        .custom-brand {
            font-family: 'Brush Script MT', cursive;
            font-size: 4rem; /* Adjusted font size for better visibility */
            font-weight: bold;
            color: #ffffff; /* Ensured text color is white */
        }

        .nav-link {
            color: #F5F5F5; /* Nav links color */
            font-weight: lighter; /* Make nav links bold */
            transition: color 0.3s; /* Smooth color transition */
        }

            .nav-link:hover {
                color: #ffc107; /* Change color on hover */
                text-decoration: underline;
                font-weight:bold;/* Underline on hover for better visibility */
            }

        .footer {
            background-color: #1A73E8; /* Match footer background with navbar */
            color: white; /* White text for contrast */
            padding: 10px 0; /* Padding for better spacing */
        }

        .search-form {
            display: flex;
            align-items: center; /* Center align items */
        }

            .search-form input {
                border: 2px solid #1A73E8; /* Border to match theme */
            }

            .search-form button {
                background-color: #1A73E8; /* Match button color with navbar */
                color: white; /* White text for contrast */
            }

                .search-form button:hover {
                    background-color: #0056b3; /* Darker blue on hover */
                }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom">
        <div class="container">
            <div class="d-flex me-5">
                <img src="~/Images/Logo.jpg" style="height: 100px; width: 100px" />
            </div>
            @Html.ActionLink(" Bicycles-Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand custom-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav d-flex flex-column flex-sm-row mb-0 justify-content-end">
                    <li class="nav-item">
                        @Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Sell", "Sell", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Buy", "Buy", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("My Bikes", "MyBikes", "Home", new { area = "" }, new { @class = "nav-link" })
                    </li>

                    @if (Session["UserType"] != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link">Welcome, @Session["UserName"] (@Session["UserType"])</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Home")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Home")">Login</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a href="@Url.Action("PurchaseOrder", "Home", new { area = "" })" class="nav-link" aria-label="My Bikes">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag" viewBox="0 0 16 16">
                                <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                            </svg>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="search-form ms-md-2">
                <form class="d-flex" action="@Url.Action("GeneralSearchResult", "Home")" method="get">
                    <input class="form-control me-2" name="searchTerm" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn button-custom" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="body-content">
        @RenderBody()
        <hr />
        <footer class="footer text-center">
            <p>&copy; @DateTime.Now.Year - Scrunti FullStack</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

</html>
